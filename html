    <script>
        let currentIndex = -1;
        const phrases = [
            "Eres tan linda que las estrellas se ponen celosas de tu brillo üåü",
            "Tu sonrisa ilumina mi camino incluso en los d√≠as m√°s oscuros ‚òÄÔ∏è",
            "Cada d√≠a a tu lado es una nueva aventura llena de magia ‚ú®",
            "Tu belleza no solo est√° en tu rostro, sino en tu hermoso coraz√≥n üíï",
            "Eres mi luz, mi gu√≠a, mi todo üåô",
            "Contigo el mundo es m√°s bonito y colorido üåà",
            "Tu presencia hace que todo tenga sentido ü¶ã",
            "Eres la raz√≥n por la que creo en la magia del amor üí´"
        ];
        
        function nextPhrase() {
            currentIndex++;
            
            if (currentIndex < phrases.length) {
                // Mostrar la frase actual
                document.getElementById('currentPhrase').innerHTML = phrases[currentIndex];
                
                // Actualizar la barra de progreso
                const progress = ((currentIndex + 1) / phrases.length) * 100;
                document.getElementById('progress').style.width = progress + '%';
                
                // Cambiar el texto del bot√≥n
                if (currentIndex === 0) {
                    document.getElementById('nextBtn').textContent = 'Siguiente mensaje üíù';
                }
                
                if (currentIndex === phrases.length - 1) {
                    document.getElementById('nextBtn').textContent = 'Ver mi mensaje final ‚ù§Ô∏è';
                }
            } else {
                // Mostrar el coraz√≥n final
                document.getElementById('messageCard').style.display = 'none';
                document.getElementById('heartContainer').style.display = 'block';
            }
        }
    </script>
